<html>
<head>
    <link href="/stylesheets/base.css" media="all" rel="stylesheet" type="text/css" />

    <title>
        Curated Twitter Hashtag Stream
    </title>
</head>
<body>
    {{if $error}}<div class="status_message">{{$error}}</div>{{/if}}

    <table>
      {{iterate $twitters $twit}}
        <tr>
          <td>x</td>
          <td>{{$twit.twitter_account}}</td>
          <td>
            <form method="POST">
                <input type="hidden" name="op" value="OAuthDance" /><input type="submit" value="Get OAuth Token" />
            </form>
          </td>
        </tr>
      {{/iterate}}
    </table>
</body>
</html>
