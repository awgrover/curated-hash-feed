<html>
<head>
    <link href="/stylesheets/base.css" media="all" rel="stylesheet" type="text/css" />

    <title>
        Curated Twitter Hashtag Stream
    </title>
</head>
<body>
    {{if $error}}<div class="status_message">{{$error}}</div>{{/if}}
    {{if $info}}<div class="status_message">{{$info}}</div>{{/if}}
    <h1>Login</h1>
    <form method="POST" class="table_form">
        <input type="hidden" name="op" value="User::Login" />
        <label>Login <input name="login" type="text" size="40" /></label>
        <label>Password <input name="password" type="password" size="40" /></label>
        <input type="hidden" name="redirect" value="/index" />
        <input type="submit" name="" value="Login" />
    </form>
</body>
</html>
